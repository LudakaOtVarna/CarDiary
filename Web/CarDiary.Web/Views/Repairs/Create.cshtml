@model RepairInputModel
@{

	var carsOptions = this.Model.CarsOptions.Select(x => new SelectListItem(x.Value, x.Key));
}
<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
	tinymce.init({
		selector: "textarea",
		plugins: [
			"image paste table link code media"
		]
	});
</script>
<br>
<br>
<br>
<center>
	<div class="container-fluid animated fadeInUp">
		<div class="container">
			<div class="col-lg-6">
				<div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
					<h1 class="text-white mb-4">Create a Repair</h1>
					<form method="post">
						<div class="row g-3">
							<div class="col-12">
								<input asp-for="Name" type="text" class="form-control border-0" placeholder="Name" style="height: 55px;">
								<span asp-validation-for="Name" class="text-light"></span>
							</div>
							<div class="col-12">
								<textarea asp-for="Description" id="myEditor" type="text" class="form-control border-0" placeholder="Description"></textarea>
								<span asp-validation-for="Description" class="text-light"></span>
							</div>
							<div class="col-12">
								<input value="" asp-for="Price" type="number" class="form-control border-0" placeholder="Price" style="height: 55px;" />
								<span asp-validation-for="Price" class="text-light"></span>
							</div>
							<div class="date col-12" id="date1" data-target-input="nearest">
								<input asp-for="Date" type="text" value=""
									   class="form-control border-0 datetimepicker-input"
									   placeholder="Car Date" data-target="#date1" data-toggle="datetimepicker" style="height: 55px;">
								<span asp-validation-for="Date" class="text-light"></span>
							</div>
							<div class="col-12">
								<select asp-for="CarId" class="form-control" asp-items="carsOptions" style="height: 55px;">
									<option value="" selected>Choose your car</option>
								</select>
								<span asp-validation-for="CarId" class="text-light"></span>
							</div>
							<br>
							<div class="col-12">
								<button class="btn btn-secondary w-50 py-3" type="submit">Submit</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</center>