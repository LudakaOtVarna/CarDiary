@model TripInputModel
@{

	var carsOptions = this.Model.CarsOptions.Select(x => new SelectListItem(x.Value, x.Key));
}
<br>
<br>
<br>
<center>
	<div class="container-fluid animated fadeInUp">
		<div class="container">
			<div class="col-lg-6">
				<div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
					<h1 class="text-white mb-4">Create a Trip</h1>
					<form method="post">
						<div class="row g-3">
							<div class="col-12">
								<input asp-for="DepartureAddress" type="text" class="form-control border-0" placeholder="DepartureAddress" style="height: 55px;">
								<span asp-validation-for="DepartureAddress" class="text-light"></span>
							</div>
							<div class="col-12">
								<input asp-for="ArrivalAddress" type="text" class="form-control border-0" placeholder="ArrivalAddress" style="height: 55px;">
								<span asp-validation-for="ArrivalAddress" class="text-light"></span>
							</div>
							<div class="col-12">
								<input value="" asp-for="Distance" type="number" class="form-control border-0" placeholder="Distance" style="height: 55px;" />
								<span asp-validation-for="Distance" class="text-light"></span>
							</div>
							<div class="date col-12">
								<label asp-for="DepartureTime" class="text-light"></label>
									<input asp-for="DepartureTime" class="form-control" value="@DateTime.Now.ToShortDateString()" />
								<span asp-validation-for="DepartureTime" class="text-light"></span>
							</div>
							<div class="date col-12">
								<div class="date col-12">
									<label asp-for="ArrivalTime" class="text-light"></label>
									<input asp-for="ArrivalTime" class="form-control" value="@DateTime.Now.ToShortDateString()" />
									<span asp-validation-for="ArrivalTime" class="text-light"></span>
								</div>
							</div>
							<div class="col-12">
								<select asp-for="CarId" class="form-control" asp-items="carsOptions" style="height: 55px;">
									<option value="" selected>Choose your car</option></select>
								<span asp-validation-for="CarId" class="text-light"></span>
							</div>
							<br>
							<div class="col-12">
								<button class="btn btn-secondary w-50 py-3" type="submit">Submit</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</center>