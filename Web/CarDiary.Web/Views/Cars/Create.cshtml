@model CarCreateModel
<br><br><br>
<center>
	<div class="container-fluid animated fadeInUp">
	<div class="container">
			<div class="col-lg-6">
				<div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
					<h1 class="text-white mb-4">Create a Car</h1>
				<form enctype="multipart/form-data" method="post">
					<div class="row g-3">
						<div class="col-12">
						<input asp-for="Brand" type="text" class="form-control border-0" placeholder="Brand" style="height: 55px;">
						<span asp-validation-for="Brand" class="text-light"></span>
					</div>
							<div class="col-12">
								<input asp-for="Model" type="text" class="form-control border-0" placeholder="Model" style="height: 55px;" />
								<span asp-validation-for="Model" class="text-light"></span>
							</div>
							<div class="date col-12" id="date1" data-target-input="nearest">
						<input asp-for="Date" type="text" value=""
							   class="form-control border-0 datetimepicker-input"
							   placeholder="Car Date" data-target="#date1" data-toggle="datetimepicker" style="height: 55px;">
								<span asp-validation-for="Date" class="text-light"></span>
							</div>
							<div class="col-12">
								<input asp-for="Image" class="form-control border-0" placeholder="Image" />
								<span asp-validation-for="Image" class="text-light"></span>
								</div>
							<br>
							<div class="col-12">
								<button class="btn btn-secondary w-50 py-3" type="submit">Submit</button>
								</div>
						</div>
				</form>
            </div>
        </div>
    </div>
</div>
</center>