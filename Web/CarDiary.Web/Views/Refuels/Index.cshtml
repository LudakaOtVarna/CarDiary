@model IEnumerable<RefuelModel>
<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(img/carousel-bg-1.jpg);">
	<div class="container-fluid page-header-inner py-5">
		<div class="container text-center">
			<h1 class="display-3 text-white mb-3 animated slideInDown">All Refuels</h1>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb justify-content-center text-uppercase">
					<li class="breadcrumb-item"><a href="#">Refuels</a></li>
				</ol>
			</nav>
		</div>
	</div>
</div>
<!-- Page Header End -->
<a class="btn btn-primary" style="margin-bottom: 50px;margin-left: 20px" asp-action="Create">Create</a>

<div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
<table class="col-12 table table-dark text-center animated fadeInUp">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Amount</th>
			<th scope="col">Price</th>
			<th scope="col">Date</th>
			<th scope="col">Car</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
	@foreach (var refuel in this.Model)
	{
		<tr>
			<th>@refuel.Id</th>
				<th>@refuel.Amount</th>
				<th>@refuel.Price</th>
				<th>@refuel.Date.ToShortDateString()</th>
					<th>@refuel.CarBrand @refuel.CarModel</th>
				<th>
						<a class="btn btn-secondary" asp-action="Details" asp-route-id="@refuel.Car.Id">Details</a>
			<a class="btn btn-warning" asp-action="Edit" asp-route-id="@refuel.Id">Edit</a>
			<a class="btn btn-danger" asp-action="Delete" asp-route-id="@refuel.Id">Delete</a>
				</th>
		</tr>
	}
	</tbody>
	</table>
	</div>