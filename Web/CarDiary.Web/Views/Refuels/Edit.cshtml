@model RefuelInputModel
@{

	var carsOptions = this.Model.CarsOptions.Select(x => new SelectListItem(x.Value, x.Key));
}

<br>
<br>
<br>
<center>
	<div class="container-fluid animated fadeInUp">
		<div class="container">
			<div class="col-lg-6">
				<div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
					<h1 class="text-white mb-4">Create a Refuel</h1>
					<form method="post">
						<div class="row g-3">
							<div class="col-12">
								<input asp-for="Amount" type="number" class="form-control border-0" placeholder="Amount" style="height: 55px;">
								<span asp-validation-for="Amount" class="text-light"></span>
							</div>
							<div class="col-12">
								<input asp-for="Price" type="number" class="form-control border-0" placeholder="Price" style="height: 55px;" />
								<span asp-validation-for="Price" class="text-light"></span>
							</div>
								<div class="date col-12" id="date1" data-target-input="nearest">
								<input asp-for"Date" type="text" name="Date"
									   class="form-control border-0 datetimepicker-input"
									   value="@Model.Date" data-target="#date1" data-toggle="datetimepicker" style="height: 55px;">
								<span asp-validation-for="Date" class="text-light"></span>
							</div>
							<div class="col-12">
								<select asp-for="CarId" class="form-control" asp-items="carsOptions" style="height: 55px;"><option value="" selected>Choose your car</option></select>
								<span asp-validation-for="CarId" class="text-light"></span>
							</div>
							<br>
							<div class="col-12">
								<button class="btn btn-secondary w-50 py-3" type="submit">Submit</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</center>