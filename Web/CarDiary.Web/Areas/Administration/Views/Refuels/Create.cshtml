@model RefuelInputModel
@{

	var carsOptions = this.Model.CarsOptions.Select(x => new SelectListItem(x.Value, x.Key));
}
<form method="post" class="col-md-6 offset-md-3">
	<h3>Create refuel</h3>
	<div class="form-group">
		<label asp-for="Amount"></label>
		<input asp-for="Amount" value=""  class="form-control" />
		<span asp-validation-for="Amount" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Price"></label>
		<input asp-for="Price" value="" class="form-control" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Date"></label>
		<input asp-for="Date" class="form-control" value="@DateTime.Now.ToShortDateString()" />
		<span asp-validation-for="Date" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="CarId"></label>
		<select asp-for="CarId" class="form-control" asp-items="carsOptions">
			<option value="" selected>Choose your car</option>
		</select>
		<span asp-validation-for="CarId" class="text-danger"></span>
	</div>
	<input type="submit" class="btn btn-primary" />
</form>