@model TripInputModel
@{

	var carsOptions = this.Model.CarsOptions.Select(x => new SelectListItem(x.Value, x.Key));
}
<form method="post" class="col-md-6 offset-md-3">
	<h3>Create repair</h3>
	<div class="form-group">
		<label asp-for="DepartureAddress"></label>
		<input asp-for="DepartureAddress" class="form-control" />
		<span asp-validation-for="DepartureAddress" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="ArrivalAddress"></label>
		<input asp-for="ArrivalAddress" class="form-control" />
		<span asp-validation-for="ArrivalAddress" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Distance"></label>
		<input asp-for="Distance" class="form-control" />
		<span asp-validation-for="Distance" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="DepartureTime"></label>
		<input asp-for="DepartureTime" class="form-control" value="@DateTime.Now.ToShortDateString()" />
		<span asp-validation-for="DepartureTime" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="ArrivalTime"></label>
		<input asp-for="ArrivalTime" class="form-control" value="@DateTime.Now.ToShortDateString()" />
		<span asp-validation-for="ArrivalTime" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="CarId"></label>
		<select asp-for="CarId" class="form-control" asp-items="carsOptions"><option value="" selected>Choose your car</option></select>
		<span asp-validation-for="CarId" class="text-danger"></span>
	</div>
	<input type="submit" class="btn btn-primary" />
</form>