@model IEnumerable<RepairModel>

<div class="pagetitle">
	<h1>Repairs</h1>
</div>
<a class="btn btn-primary" asp-action="Create">Create</a>
<table class="table table-primary text-center">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Price</th>
			<th scope="col">Car</th>
			<th scope="col">Is Deleted</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>

		@foreach (var repair in this.Model)
		{
			<tr>
				<th>@repair.Id</th>
				<th>@repair.Name</th>
				<th>@repair.Price</th>
				<th>@repair.CarBrand @repair.CarModel</th>
				<th>
					@if (@repair.IsDeleted)
					{
						<input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked disabled>
					}
					else
					{
						<input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" disabled>
					}

				</th>
				<th>
					@if (!@repair.IsDeleted)
					{
						<a class="btn btn-warning" asp-action="Edit" asp-route-id="@repair.Id">Edit</a>
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@repair.Id">Delete</a>
					}
					
					<a class="btn btn-outline-danger" asp-action="HardDelete" asp-route-id="@repair.Id">Hard Delete</a>
				</th>
			</tr>
		}
