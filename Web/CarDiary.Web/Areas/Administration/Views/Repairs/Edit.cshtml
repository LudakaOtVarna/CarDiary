@model RepairInputModel
@{

	var carsOptions = this.Model.CarsOptions.Select(x => new SelectListItem(x.Value, x.Key));
}
<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
	tinymce.init({
		selector: "textarea",
		plugins: [
			"image paste table link code media"
		]
	});
</script>
<form method="post" class="col-md-6 offset-md-3">
	<h3>Edit repair</h3>
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" id="myEditor"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Date"></label>
		<input asp-for="Date" class="form-control" />
		<span asp-validation-for="Date" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="CarId"></label>
		<select asp-for="CarId" class="form-control" asp-items="carsOptions"><option value="" selected>Choose your car</option></select>
		<span asp-validation-for="CarId" class="text-danger"></span>
	</div>
	<br />
	<input type="submit" class="btn btn-primary" />
</form>